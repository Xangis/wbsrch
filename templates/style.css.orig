@font-face {
font-family: Lato-Bol;
src: url(Lato-Bol.ttf);
}

@font-face {
font-family: Gudea-Regular;
src: url(Gudea-Regular.otf);
}

h2 {
font-size: 1.5em;
margin: -12px 0px 0px 0px;
padding: 0px;
text-align: center;
}

table {
padding: 6px;
}

th {
margin: 7px;
padding: 7px;
}

td {
vertical-align: top;
}

img {
border: 0;
vertical-align: middle;
margin-left: 3px;
margin-right: 3px;
}

.smallertext {
font-size: small;
}

.subtext {
font-size: small;
text-align: center;
font-style: italic;
}

.copyright {
font-size: small;
text-align: center;
}

.tinytext {
font-size: x-small;
}

.centered {
text-align: center;
margin-left: auto;
margin-right: auto;
}

p {
margin-top: 2px;
margin-bottom: 8px;
margin-left: 12px;
margin-right: 12px;
}

form {
margin-top: 4px;
margin-bottom: 6px;
margin-left: 10px;
margin-right: 10px;
}

input[type="text"] {
width: 70%;
border: 1px solid #DDD;
border-radius: 3px;
box-shadow: 0 0 5px #DDD inset;
outline: none;
height: 29px;
padding-left: 5px;
}

input[type="text"].shortbox {
width: 50%;
}

input[type="submit"] {
height: 31px;
box-shadow: 0 0 5px #DDD inset;
outline: none;
border: solid 1px #DDD;
border-radius: 3px;
font-size: 16px;
padding: 1px 6px 1px 6px;
background: #fff;
background: linear-gradient(top, #ffffff 0%, #f1f1f1 49%, #e1e1e1 51%, #f6f6f6 100%);
}

.flag {
height: 12px;
}

.logo {
margin-top: -18px;
width: 62px;
}

table.inline {
margin-left: 20px;
text-align: left;
}

table.inline th {
margin: 3px;
padding: 4px;
border: 1px solid;
}

table.inline td {
margin: 3px;
padding: 3px;
border: 1px solid;
}

.head {
text-align: center;
margin-left: auto;
margin-right: auto;
}

.results {
margin-left: 0.5%;
margin-right: 0.5%;
}

.left {
text-align: left;
}

.right {
text-align: right;
}

.body {
margin-left: 2%;
margin-right: 2%;
}

@media (max-width: 959px) {
  body {
  font-size: 0.9em;
  }
  
  .logo {
  width: 41px;
  margin-top: -12px;
  }

  input[type="text"] {
  width: 70%;
  }
}

@media (min-width: 960px) {
  .flag {
  height: 16px;
  }

  input[type="text"] {
    width: 50%;
  }

  input[type="text"].shortbox {
    width: 35%;
  }
}

@media (min-width: 1400px) {
  .flag {
  height: 18px;
  }
}

.floatleft {
float: left;
margin-left: 5%;
}

.floatright {
float: right;
margin-right: 1%;
}

@media (max-width: 480px) {
  .flag{
  height: 10px;
  }

  input[type="text"] {
  width: 55%;
  }

  body {
  font-size: 0.75em;
  }

  .floatleft {
  margin-left: 4%;
  }

  .floatright {
  margin-right: 0%;
}

}
body {
font-family: Gudea-Regular, Arial, Helvetica, sans-serif;
background-color: #f9f9f9;
color: #111111;
}

h1, h2, h3, h4, h5, h6 {
font-family: Lato-Bol, Arial, Helvetica, sans-serif;
}

h1 {
padding: 10px;
text-size: 3em;
}

.faded {
color: #444444;
}

.date {
color: #3366AA;
font-weight: bold;
}

.version {
color: #555555;
font-family: Courier, Courier New, Console, fixed;
font-weight: bold;
}

.stats {
color: #551111;
font-size: smaller;
font-family: Courier, Courier New, Console, fixed;
font-weight: bold;
}

.error {
color: #993333;
font-weight: bold;
}

a:link {
color: #3366AA;
}

a:visited {
color: #3366AA;
}

h3 {
text-align: left;
color: #3366AA;
margin-left: 6px;
margin-right: 0px;
margin-top: 0px;
margin-bottom: 0px;
padding: 0px;
}

.heading {
color: #993300;
font-weight: bold;
}

.site {
margin-left: 6px;
background: #f9f9f9;
}

.section {
background: #dddddd;
}

em {
color: #334455;
}

@media (max-width: 959px) {
  h1 {
  padding: 8px;
  text-size: 1.9em;
  }
}

@media (max-width: 599px) {
  h1 {
  padding: 0px;
  }

  a {
  display: inline-block;
  margin: 5px;
  }

  .site a {
  margin-left: 0px;
  }

  .hidden-small {
  display: none;
  }

  p.site {
  padding-left: 5px;
  }
}

@media (min-width: 600px) {
  .visible-small {
  display: none;
  }
}

#fblike {
display: inline;
}

.clear {
clear: both;
}

.subhead {
text-align: center;
margin-left: auto;
margin-right: auto;
font-style: italic;
font-size: larger;
}

.content {
float: left;
width: 62%;
}

.rightside {
margin-left: 2%;
margin-top: 1.5em;
padding: 6px;
border-left: 1px solid #666;
float: right;
width: 32%;
}

.footer {
clear: both;
background: #313228;
color: #F9F9F9;
}

.blog h2 {
margin: 1em 0.5em 0.2em 0.5em;
text-align: left;
}

.blog h3 {
color: #111111;
margin: 0.7em 0.5em 0.2em 0.55em;
}

.blog h4 {
margin: 0.7em 0.5em 0.2em 1.75em;
}

.blog table {
border: 1px solid #666;
margin: 8px 12px 8px 12px;
padding: 6px;
}

.blog th {
border-bottom: 2px solid #666;
}

.blog img {
max-width: 98%;
margin-top: 12px;
}

.blog td {
padding: 3px;
}

.blog table {
margin-top: 16px;
margin-bottom: 16px;
}

.bottomborder {
padding-bottom: 10px;
border-bottom: 2px solid #999;
margin-bottom: 16px;
}

.indented {
margin-left: 12px;
}

.indented2 {
margin-left: 11px;
}

.spacebelow {
margin-bottom: 8px;
}

.post {
background-color: #f0f0f0;
border-radius: 8px;
padding: 1px 6px 6px 6px;
margin: 6px;
}

.boldest {
font-weight: 900;
color: #23487A;
}

.language
  ul > li {
    list-style-type: none;
    display: inline;
    margin-left: 5px;
    margin-right: 5px;
  }
}
